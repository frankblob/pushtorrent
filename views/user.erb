<div class='container'>

	<div class='row'>

		<div class='col-md-8'>
			<%= flash[:message] if flash[:message] %>
			<h2>Trackers:</h2>
			<p>
			Your notifications: sort by name | sort by created_date <br/>
			<ol>
			<%# 
			do partial here - for sort order
			alphabetical: 
			<% @trackers.sort_by(&:keywords).each do |tracker| %>
				<% @trackers.sort_by(&:updated_at).reverse.each do |tracker| %>
				<li>
				<strong><%= tracker[:keywords] %></strong> <a href="#">Edit</a> | <a href="#">Pause</a> | <form action='/trackers' method='POST'><input type='hidden' name='_method' value='DELETE' /><input type='hidden' name='tracker_id' value='<%= tracker[:id] %>'><input type='submit' value='Remove'></form> | <a href="/trackers/<%= tracker[:id] %>">Remove</a><br />
